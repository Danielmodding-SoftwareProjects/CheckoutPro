<Window x:Class="CheckoutPro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheckoutPro"
        xmlns:Icons="clr-namespace:FluentIcons.WPF;assembly=FluentIcons.WPF"
        mc:Ignorable="d"
        Title="CheckoutPro" Height="650" Width="950" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>



        <!-- 
        
        - palette.info.light #64b5f6
        - palette.info.main  #2196f3
        - palette.info.dark  #1976d2
        
        -->

        <Grid Grid.Row="0" Background="#F2F3F9">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>



            <!-- Header -->
            <Grid Grid.Column="0">
                <Button BorderThickness="0" Width="42" Grid.Column="0" Background="Transparent" HorizontalAlignment="Left">
                    <Grid>
                        <Rectangle Width="40" Height="40" RadiusX="5" RadiusY="5" />
                        <Icons:SymbolIcon Symbol="Home" />
                    </Grid>
                </Button>
            </Grid>


            <TextBlock Text="CheckoutPro" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1"/>

            <Grid Grid.Column="2">
                <Button BorderThickness="0" Width="42" Grid.Column="0" Background="Transparent" HorizontalAlignment="Right" Margin="0,0,42,0" Click="ButtonHeaderSettings_Click">
                    <Grid>
                        <Rectangle Width="40" Height="40" RadiusX="5" RadiusY="5" />
                        <Icons:SymbolIcon Symbol="Settings" />
                    </Grid>
                </Button>
                <Button BorderThickness="0" Width="42" Grid.Column="0" Background="Transparent" HorizontalAlignment="Right" Margin="0,0,84,0" Click="ButtonHeaderInfo_Click">
                    <Grid>
                        <Rectangle Width="40" Height="40" RadiusX="5" RadiusY="5" />
                        <Icons:SymbolIcon Symbol="Info" />
                    </Grid>
                </Button>
                <!--<Button BorderThickness="0" Width="42" Grid.Column="0" Background="Transparent" HorizontalAlignment="Right" Margin="0,0,122,0" Click="ButtonHeaderUser_Click">
                    <Grid>
                        <Rectangle Width="40" Height="40" RadiusX="5" RadiusY="5"/>
                        <Icons:SymbolIcon Symbol="Person" />
                    </Grid>
                </Button>-->
                <Button BorderThickness="0" Width="42" Grid.Column="0" Background="Transparent" HorizontalAlignment="Right" Margin="0,0,0,0" Click="ButtonExitApplication_Click">
                    <Grid>
                        <Rectangle Width="40" Height="40" RadiusX="5" RadiusY="5"/>
                        <Icons:SymbolIcon Symbol="ArrowExit" />
                    </Grid>
                </Button>
            </Grid>




            <Grid.Effect>
                <DropShadowEffect BlurRadius="5" ShadowDepth="1" Direction="-55" Color="LightGray" />
            </Grid.Effect>
        </Grid>

        <Grid Grid.Row="1" Margin="5">
            <!-- Main -->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="450" MaxWidth="600" MinWidth="200"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Row="0">
                    <TextBlock Text="Produkte" FontSize="18" FontWeight="Medium"/>
                </Grid>

                <GroupBox Header="Funktionen" Grid.Row="1">
                    <StackPanel Orientation="Horizontal">
                        <Button BorderThickness="0" Width="42" Grid.Column="0" Background="Transparent" Click="ButtonAddProduct_Click">
                            <Grid>
                                <Rectangle Width="40" Height="40" RadiusX="5" RadiusY="5" Stroke="Gray"/>
                                <Icons:SymbolIcon Symbol="AddCircle" />
                            </Grid>
                        </Button>
                        <ToggleButton Name="ToggleButtonEditProduct" BorderThickness="0" Width="42" Grid.Column="0" Background="Transparent" Click="ButtonEditProduct_Click">
                            <Grid>
                                <Rectangle Width="40" Height="40" RadiusX="5" RadiusY="5" Stroke="Gray"/>
                                <Icons:SymbolIcon Symbol="Edit" />
                            </Grid>
                        </ToggleButton>
                        <ToggleButton Name="ToggleButtonDeleteProduct" BorderThickness="0" Width="42" Grid.Column="0" Background="Transparent" Click="ButtonDeleteProduct_Click">
                            <Grid>
                                <Rectangle Width="40" Height="40" RadiusX="5" RadiusY="5" Stroke="Gray"/>
                                <Icons:SymbolIcon Symbol="Delete" />
                            </Grid>
                        </ToggleButton>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Datenbank" Grid.Row="1" Grid.Column="1">
                    <StackPanel Orientation="Horizontal">
                        <Button BorderThickness="0" Width="42" Grid.Column="0" Background="Transparent" Click="ButtonSaveProducts_Click">
                            <Grid>
                                <Rectangle Width="40" Height="40" RadiusX="5" RadiusY="5" Stroke="Gray"/>
                                <Icons:SymbolIcon Symbol="Save" />
                            </Grid>
                        </Button>

                        <Button BorderThickness="0" Width="42" Grid.Column="0" Background="Transparent">
                            <Grid>
                                <Rectangle Width="40" Height="40" RadiusX="5" RadiusY="5" Stroke="Gray"/>
                                <Icons:SymbolIcon Symbol="Open" />
                            </Grid>
                        </Button>



                    </StackPanel>

                    
                </GroupBox>

                <GroupBox Header="Produkte" Grid.Row="2" Grid.ColumnSpan="2">
                    <ListBox d:ItemsSource="{d:SampleData}" Name="ListboxMainWindowProducts" SelectionChanged="ListboxMainWindowProducts_SelectionChanged" ScrollViewer.HorizontalScrollBarVisibility="Disabled" >
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid Width="240" Height="100">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>

                                    </Grid.RowDefinitions>

                                    <Rectangle Fill="{Binding BackgroundColor}" Stroke="{Binding BorderColor}" StrokeThickness="3" RadiusX="3" RadiusY="3" Grid.RowSpan="3"/>
                                    <TextBlock Text="{Binding Name}" Foreground="{Binding BorderColor}" Grid.Row="0" FontSize="20" FontWeight="Medium" HorizontalAlignment="Center" Margin="0,10,0,10" TextWrapping="WrapWithOverflow" VerticalAlignment="Center"/>
                                    <!--<TextBlock Text="{Binding Desc}" Grid.Row="1" HorizontalAlignment="Center"/>-->
                                    <TextBlock Text="{Binding Preis, StringFormat={}{0:C}}" Grid.Row="2" Language="de-DE" FontSize="16" FontWeight="Medium" Margin="10,3" HorizontalAlignment="Right" Background="Yellow" Padding="1" VerticalAlignment="Top" />

                                </Grid>
                            </DataTemplate>
                            
                        </ListBox.ItemTemplate>
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel Orientation="Horizontal" ItemWidth="250"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        
                        <ListBox.GroupStyle>
                            <GroupStyle>
                                <GroupStyle.HeaderTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Name}" FontSize="20" Padding="10,5" />
                                    </DataTemplate>
                                </GroupStyle.HeaderTemplate>
                                
                                
                            </GroupStyle>
                        </ListBox.GroupStyle>

                        <!--<ListBox.Resources>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border x:Name="border" Background="Transparent">
                                                <Grid>
                                                    <ContentPresenter />
                                                    <TextBlock x:Name="text" Text="{Binding Preis, StringFormat={}{0:C}}" Language="de-DE" Visibility="Collapsed" />
                                                </Grid>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="text" Property="Visibility" Value="Visible" />
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.Resources>-->

                    </ListBox>
                </GroupBox>


            </Grid>

            <GridSplitter Grid.Column="1" Width="5" VerticalAlignment="Stretch" HorizontalAlignment="Center" />

            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <TextBlock Text="Zusammenfassung" FontSize="18" FontWeight="Medium"/>
                </Grid>






                <GroupBox Grid.Row="2" Header="Einkauf" >
                    <!--<TextBox Text="1x Produkt A 3,00€" BorderBrush="Transparent" Name="TextBoxCurrentPurchase"/>-->
                    <DataGrid x:Name="DataGridPurchase" AutoGenerateColumns="False" CanUserAddRows="False" Background="Transparent" BorderBrush="Transparent" HeadersVisibility="Column" RowHeight="32" VerticalGridLinesBrush="Transparent" ColumnHeaderHeight="50" >
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="M" Binding="{Binding Anzahl}" Width="40" FontSize="18" FontWeight="Bold"/>
                            <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="*" FontSize="18" />
                            <DataGridTextColumn Header="Preis" Binding="{Binding Preis}" Width="80" FontSize="18"/>
                            <DataGridTextColumn Header="Insgesamt" Binding="{Binding Summe}" Width="80" FontSize="18"/>
                            <DataGridTemplateColumn Width="40">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button BorderThickness="0"  Grid.Column="0" Background="Transparent" Click="ButtonDataGridDeleteItem_Click">
                                            <Icons:SymbolIcon Symbol="Delete" Foreground="Red" />
                                        </Button>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>

                    </DataGrid>

                </GroupBox>

                <GroupBox Grid.Row="3" Header="Summe">
                    <TextBlock Text="0.00€" FontSize="28" HorizontalAlignment="Right" Name="TextBlockSummePurchase"/>
                </GroupBox>

                <GroupBox Grid.Row="4" Header="Drucken" >
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button BorderThickness="0" Width="112" Grid.Column="0" Background="Transparent" Click="ButtonClearQuittung_Click">
                            <Grid>
                                <Rectangle Width="110" Height="40" RadiusX="5" RadiusY="5" Stroke="Gray"/>
                                <Icons:SymbolIcon Symbol="DeleteLines" Margin="0,0,60,0"/>
                                <TextBlock Text="C" Margin="0,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" FontWeight="Normal" />
                            </Grid>
                        </Button>
                        <Button BorderThickness="0" Width="182" Grid.Column="0" Background="Transparent" Click="ButtonPrintLabel_Click">
                            <Grid>
                                <Rectangle Width="180" Height="40" RadiusX="5" RadiusY="5" Stroke="Gray" Fill="#4caf50"/>
                                <Icons:SymbolIcon Symbol="Print" Margin="0,0,90,0"/>
                                <TextBlock Text="Drucken" Margin="20,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18" FontWeight="Normal" />
                            </Grid>
                        </Button>
                    </StackPanel>


                </GroupBox>
                


            </Grid>



        </Grid>

        <Grid Grid.Row="2">
            <!-- Footer -->
            
            <Rectangle Fill="#F2F3F9"/>
            <ProgressBar Name="ProgressBarBottomMainWindow" Value="0" Foreground="Gray" Background="Transparent" Margin="5"/>
            <TextBlock Text="OK" Name="TextBlockLogOutputMainwindow" Padding="5,0" Margin="7"/>
            
            
            <Grid.Effect>
                <DropShadowEffect BlurRadius="5" ShadowDepth="1" Direction="-5" Color="LightGray" />
            </Grid.Effect>
        </Grid>

    </Grid>
</Window>
